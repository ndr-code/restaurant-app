# ================================
# üöÄ RESTAURANT APP ENVIRONMENT CONFIGURATION
# ================================
# Copy this file to .env and fill in your actual values

# ================================
# üåê API CONFIGURATION
# ================================

# Base URL API dari backend sesuai API Contract
VITE_API_BASE_URL=https://be-restaurant-app-for-mentee-b6yxog5fk.vercel.app

# API timeout dalam milliseconds (10 detik)
VITE_API_TIMEOUT=10000

# API version prefix (jika diperlukan)
VITE_API_PREFIX=/api

# ================================
# üîê AUTHENTICATION CONFIGURATION
# ================================

# JWT Token storage key di localStorage
VITE_AUTH_TOKEN_KEY=auth_token

# User data storage key di localStorage  
VITE_USER_DATA_KEY=user_data

# Token expiry time dalam hours (24 jam)
VITE_TOKEN_EXPIRY_HOURS=24

# ================================
# üè™ APPLICATION CONFIGURATION
# ================================

# Application name
VITE_APP_NAME=Restaurant Discovery App

# Application version
VITE_APP_VERSION=1.0.0

# Environment mode
VITE_NODE_ENV=development

# ================================
# üé® UI/UX CONFIGURATION
# ================================

# Default items per page untuk pagination
VITE_DEFAULT_PAGE_SIZE=10

# Maximum items per page
VITE_MAX_PAGE_SIZE=50

# Default restaurant image jika tidak ada
VITE_DEFAULT_RESTAURANT_IMAGE=https://via.placeholder.com/400x300?text=Restaurant

# Default user avatar jika tidak ada
VITE_DEFAULT_USER_AVATAR=https://via.placeholder.com/150x150?text=User

# ================================
# üó∫Ô∏è MAPS & LOCATION CONFIGURATION
# ================================

# Google Maps API Key (opsional)
VITE_GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# Default location coordinates (Jakarta)
VITE_DEFAULT_LATITUDE=-6.2088
VITE_DEFAULT_LONGITUDE=106.8456

# ================================
# üì± PWA CONFIGURATION
# ================================

# Enable service worker
VITE_ENABLE_PWA=true

# App manifest name
VITE_PWA_NAME=Restaurant App

# App manifest short name
VITE_PWA_SHORT_NAME=RestaurantApp

# ================================
# üîß DEVELOPMENT CONFIGURATION
# ================================

# Enable Redux DevTools di development
VITE_ENABLE_REDUX_DEVTOOLS=true

# Enable React Query DevTools di development
VITE_ENABLE_REACT_QUERY_DEVTOOLS=true

# Enable detailed logging
VITE_ENABLE_LOGGING=true

# Mock API responses (untuk testing tanpa backend)
VITE_ENABLE_MOCK_API=false

# ================================
# üìä ANALYTICS & MONITORING (OPSIONAL)
# ================================

# Google Analytics ID
VITE_GA_TRACKING_ID=your_ga_tracking_id_here

# Sentry DSN untuk error monitoring
VITE_SENTRY_DSN=your_sentry_dsn_here

# ================================
# üéØ FEATURE FLAGS
# ================================

# Enable/disable features
VITE_ENABLE_REVIEWS=true
VITE_ENABLE_CART=true
VITE_ENABLE_ORDERS=true
VITE_ENABLE_RECOMMENDATIONS=true
VITE_ENABLE_NOTIFICATIONS=false

# ================================
# üîí SECURITY CONFIGURATION
# ================================

# Enable HTTPS only
VITE_FORCE_HTTPS=false

# CORS origins (untuk development)
VITE_CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# ================================
# üì§ FILE UPLOAD CONFIGURATION (OPSIONAL)
# ================================

# Maximum file size untuk upload dalam MB
VITE_MAX_FILE_SIZE_MB=5

# Allowed file types untuk upload
VITE_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp

# Cloudinary configuration
VITE_CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
VITE_CLOUDINARY_UPLOAD_PRESET=your_upload_preset

# ================================
# üåç INTERNATIONALIZATION
# ================================

# Default language
VITE_DEFAULT_LANGUAGE=id

# Available languages
VITE_AVAILABLE_LANGUAGES=id,en

# ================================
# üí≥ PAYMENT CONFIGURATION (OPSIONAL)
# ================================

# Payment gateway configuration
VITE_PAYMENT_GATEWAY_URL=https://payment.example.com
VITE_PAYMENT_PUBLIC_KEY=your_payment_public_key_here

# ================================
# üìß NOTIFICATION CONFIGURATION (OPSIONAL)
# ================================

# Email service configuration
VITE_EMAIL_SERVICE_URL=https://email.example.com

# Push notification configuration
VITE_FCM_VAPID_KEY=your_fcm_vapid_key_here
